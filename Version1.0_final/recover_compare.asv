%X=imread('Lena.bmp');
if  isempty(im_message)
  warndlg('无法获取秘密图片的规格，将无法提取或提取出的秘密图像是错误的','警告')
  error();
X=im_message;
%计算原始图像直方图数据
%L=2;         %灰度级
nk0=0;
nk1=0;
[row,col]=size(X);
for i=1:row
    for j=1:col
        if X(i,j)==0
            nk0=nk0+1;
        else 
            nk1=nk1+1;
        end        
    end
end
%计算密写后图像直方图数据
Y=imread('info_recover_image.bmp');
nj0=0;nj1=0;
[row,col]=size(Y);
for i=1:row
    for j=1:col
        if Y(i,j)==0
            nj0=nj0+1;
        else
            nj1=nj1+1;
        end   
    end
end
%计算原始图像和密写后图像的差异
Z=zeros(row,col);
for i=1:row
    for j=1:col
        if X(i,j)==Y(i,j)
            Z(i,j)=1;
        end
    end
end
%画图
figure
x=[0 1];
hist_comp=[nk0 nj0 ; nk1 nj1];
bar(x,hist_comp);
title('原始图像和密写图像直方图对比');
legend('原始图像直方图','密写图像直方图');
figure
imshow(Z);
title('原始图像和密写图像差异对比');
